{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "modules/emails/common/templates/**/*", "outDir": "dist/src" },
      { "include": "modules/deep-link/common/.well-known/**/*", "outDir": "dist/src" },
      { "include": "modules/pdf/common/fonts/**/*", "outDir": "dist/src" }
    ],
    "watchAssets": true,
    "webpack": false,
    "deleteOutDir": true
  }
}
